<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/adapteritem_LL_root">

    <LinearLayout
        android:id="@+id/adapteritem_LL_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/adapteritem_tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adapteritem_LL_store_and_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adapteritem_tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            
            android:layout_weight="1"
            
            />

        <TextView
            android:id="@+id/adapteritem_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            
            android:layout_weight="1"
            
            />

        <TextView
            android:id="@+id/adapteritem_tv_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            
            android:layout_weight="1"
            
            />

    </LinearLayout>

</LinearLayout>